{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "composite": true
  },
  "references": [
    { "path": "src/client" }
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
