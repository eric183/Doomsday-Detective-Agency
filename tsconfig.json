{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./",
    "composite": true
  },
  "references": [
    { "path": "./src/client" },
    { "path": "./src/server" }
  ],
  "include": [
    "config/*", 
    "scripts/*",
    "src/client/tsconfig.json",
    "src/server/tsconfig.json",
    "src/client/PaaS/**/*.tsx", 
    "src/client/PaaS/**/*.ts", 
    "src/server/**/*", 
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist/**/*"]
}
