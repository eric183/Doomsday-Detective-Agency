{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "composite": true,
    "paths": {
      "~/*":  ["./PaaS/*"],
      "~components/*": ["./PaaS/components/*"],
      "@LocalType": ["./Paas/index.d.ts"]
    }
  }
}
